rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isValidImageFile() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB max
             request.resource.contentType.matches('image/.*');
    }
    
    // Recipe images
    match /recipes/{recipeId}/{allPaths=**} {
      // Anyone can read recipe images
      allow read: if true;
      
      // Only authenticated users can upload images
      allow write: if isAuthenticated() && isValidImageFile();
      
      // Users can delete their own recipe images
      allow delete: if isAuthenticated();
    }
    
    // User profile photos
    match /users/{userId}/profile/{allPaths=**} {
      // Anyone can read profile photos
      allow read: if true;
      
      // Users can only upload/update their own profile photo
      allow write: if isAuthenticated() && 
                      request.auth.uid == userId && 
                      isValidImageFile();
      
      // Users can delete their own profile photo
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
